    "class Human:\n",
    "    name = \"\"\n",
    "\n",
    "    def hello(self, val):\n",
    "        if self.name:\n",
    "            return f\"Hello {val}! I am {self.name}.\"\n",
    "        return f\"Hello {val}!\"\n",
    "\n",
    "bill = Human()\n",
    "print(bill.hello(\"John\"))\n",
    "\n",
    "bill.name = \"Bill\"\n",
    "print(bill.hello(\"John\")) "
   ]
